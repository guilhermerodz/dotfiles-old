[alias]
	ps = push
	pom = push origin master -u

	ci = commit
	# Commit with Message
	cm = "!f() { git commit -m \"$*\"; }; f"

	co = checkout
	# New Branch
	nb = checkout -b
	# Switch Branch (keep work)
	sb = switch -c
	# Delete Branch
	db = branch -D

	st = status -sb
	sf = show --name-only
	lg = log --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30
	# List all branches
	lb = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate

	# List incoming & outgoing commits (compares to remote)
	incoming = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
	outgoing = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)

	unstage = reset HEAD --
	# Reset all changes applied to a file
	discard = checkout --

	# Undo the last commit but keep changes
	rollback = reset --soft HEAD~1